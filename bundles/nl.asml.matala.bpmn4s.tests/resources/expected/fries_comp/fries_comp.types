record UNIT {
	int	unit
}

record Receipt {
    real	amount
}

enum Topping { Ketchup Mayo Onions }

record Fries {
    Size	size
    Topping[]	style
}

enum Size { Small Medium Large Undefined }

record ClientContext {
    string	client_id
    Fries	fries
    bool	premium
}

record FriesOrder {
    string	client_id
    Fries	fries
}

record SnackbarContext {
    string	employee_id
    int	orders
}

record FriesDelivery {
    FriesOrder	clientOrder
    Receipt	receipt
}

record DeliveryServiceContext {
    FriesDelivery	delivery
}

